                    image_width: column_width,
                    template_code: "f1.2"
                } %}
            {% include "column.end.twig" with { gutter: articles_gutter } %}

            {# Column 2 #}
            {% include "column.start.twig" with { width: column_width, attributes: "valign='top'" } %}
                {% include "../../fragments/article.twig" with {
                    image_width: column_width,
                    template_code: "f1.2"
                } %}
            {% include "column.end.twig" with { gutter: articles_gutter } %}

            {# Column 3 #}
            {% include "column.start.twig" with { width: column_width, attributes: "valign='top'" } %}
                {% include "../../fragments/article.twig" with {
                    image_width: column_width,
                    template_code: "f1.2"
                } %}
            {% include "column.end.twig" %}

        {% include "column.collection.end.twig" %}

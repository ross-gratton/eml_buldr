{% set column_gutter = 20 %}
{% set column_width = ((630 - column_gutter) - (horizontal_spacing * 2)) / 2 %}

{% include "container.start.twig" with {
    module: "e1.1_numbered-columns",
    thumb: "e1.1_numbered-columns.png",
    outer_attributes: "data-bgcolor='e1.1_background--outer'",
    attributes: "data-bgcolor='e1.1_background--inner'",
    outer_class: "bg--white"
} %}
    {% include "content.start.twig" with {
        top: vertical_spacing, left: horizontal_spacing, right: horizontal_spacing,
        class: "t-30 copy daintree center bold",
        attributes: "data-color='e1.1_title-color'"
    } %}

        e1.1 - Numbered Columns

    {% include 'content.spacer.twig' with { height: 40, left: horizontal_spacing, right: horizontal_spacing } %}
        {% include 'column.collection.start.twig' with { class: "stack-on-mobile" } %}

            {# Column 1 #}
            {% include "column.start.twig" with { width: column_width, attributes: "valign='top'" } %}
                {% include "../../fragments/number-text.twig" with { template_code: "e1.1" } %}
            {% include "column.end.twig" with { gutter: column_gutter } %}

            {# Column 2 #}
            {% include "column.start.twig" with { width: column_width, attributes: "valign='top'" } %}
                {% include "../../fragments/number-text.twig" with { template_code: "e1.1" } %}
            {% include "column.end.twig" %}

        {% include 'column.collection.end.twig' %}
    {% include "content.end.twig" with { left: horizontal_spacing, right: horizontal_spacing } %}
{% include "container.end.twig" %} 
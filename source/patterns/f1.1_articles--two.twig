{% set articles_gutter = 20 %}
{% set column_width = ((630 - articles_gutter) - (horizontal_spacing * 2)) / 2 %}

{% include "container.start.twig" with {
    module: "f1.1_articles--two",
    thumb: "f1.1_articles--two.png",
    outer_attributes: "data-bgcolor='f1.1_background--outer'",
    attributes: "data-bgcolor='f1.1_background--inner'",
    outer_class: "bg--gallery",
} %}
    {% include "content.start.twig" with { top: vertical_spacing, left: horizontal_spacing, right: horizontal_spacing } %}
        {% include "column.collection.start.twig" with { class: "stack-on-mobile" } %}

            {# Column 1 #}
            {% include "column.start.twig" with { width: column_width, attributes: "valign='top'" } %}
                {% include "../../fragments/article.twig" with {
                    image_width: column_width,
                    template_code: "f1.1"
                } %}
            {% include "column.end.twig" with { gutter: articles_gutter } %}

            {# Column 2 #}
            {% include "column.start.twig" with { width: column_width, attributes: "valign='top'" } %}
                {% include "../../fragments/article.twig" with {
                    image_width: column_width,
                    template_code: "f1.1"
                } %}
            {% include "column.end.twig" %}

        {% include "column.collection.end.twig" %}
    {% include "content.end.twig" with { bottom: vertical_spacing, left: horizontal_spacing, right: horizontal_spacing } %}
{% include "container.end.twig" %}